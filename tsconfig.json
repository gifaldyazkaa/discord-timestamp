{
    "compilerOptions": {
        "experimentalDecorators": true,
        "allowJs": true,
        "sourceMap": true,
        "lib": ["es2015", "esnext", "dom"],
        "jsx": "preserve",
        "paths": { "@/*": ["./src/*"] },
        "target": "es5",
        "esModuleInterop": true
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
    "exclude": ["dist/*"]
}
